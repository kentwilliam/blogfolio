@import 'nib'
@import 'fonts'

*
  box-sizing border-box

body, article, section, nav, header, h1, h2, h3, h4, h5, h6, p
  padding 0
  margin 0

body
  font-family copy
  font-weight 400
  font-size 100%
  line-height 1.7rem
  background #ddd

h1, h2, h3, h4, h5, h6
  font-family novecento-medium
  text-transform uppercase
  font-weight normal

a
  text-transform uppercase
  font-family novecento-light
  display inline-block

body > header
  fixed top right
  width 30%
  height 100%
  padding 2rem
  background #333
  color white
  text-align center

  h1
    line-height 2rem
    font-size 1rem
    letter-spacing 3px

  a
    color #9e6
    font-size 0.9rem
    text-decoration none
    margin-right 0.7rem
    letter-spacing 0.06rem
    &:hover
      color #bf8

  .tagline
    font-family novecento-light
    text-transform uppercase
    font-size 0.75rem
    letter-spacing 0.06rem
    color silver

.content
  background white
  margin 0 30% 0 2%
  padding 2rem 3rem

.articles
  padding 2rem 0
  max-width 45rem
  margin 0 auto
  h2
    font-size 2.5rem
    font-family novecento-light
  article
    margin 0 0 2rem 0
  time
    display block
